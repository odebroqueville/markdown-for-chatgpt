{
    "manifest_version": 3,
    "name": "Markdown For Chatgpt",
    "version": "0.1.0",
    "description": "This extension will render the Markdown in code blocks generated by ChatGPT.",
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Rendering Markdown..."
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://chat.openai.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*"
            ],
            "run_at": "document_idle",
            "js": [
                "marked.min.js",
                "contentScript.js"
            ],
            "css": [
                "styles/base.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "styles/avenir-white.css",
                "styles/foghorn.css",
                "styles/markdown-alt.css",
                "styles/markdown.css",
                "styles/markdown1.css",
                "styles/markdown2.css",
                "styles/markdown3.css",
                "styles/markdown4.css",
                "styles/markdown5.css",
                "styles/markdown6.css",
                "styles/markdown7.css",
                "styles/markdown8.css",
                "styles/markdown9.css",
                "styles/markdown10.css",
                "styles/screen.css",
                "styles/swiss.css"
            ],
            "matches": [
                "https://chat.openai.com/*"
            ]
        }
    ]
}