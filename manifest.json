{
    "manifest_version": 3,
    "name": "Markdown For Chatgpt",
    "version": "0.1.0",
    "description": "This extension will render the Markdown in code blocks generated by ChatGPT.",
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Rendering Markdown..."
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://chat.openai.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*"
            ],
            "run_at": "document_idle",
            "js": [
                "marked.min.js",
                "contentScript.js"
            ],
            "css": [
                "styles/base.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "fonts/lmroman10-regular.woff",
                "fonts/lmroman10-bold.woff",
                "fonts/lmroman10-italic.woff",
                "fonts/lmroman10-bolditalic.woff",
                "styles/github-markdown-dark.css",
                "styles/github-markdown-light.css",
                "styles/jasonm23-avenir-white.css",
                "styles/jasonm23-dark.css",
                "styles/iasonm23-foghorn.css",
                "styles/jasonm23-swiss.css",
                "styles/jotander-air.css",
                "styles/jotander-modest.css",
                "styles/iotander-retro.css",
                "styles/thomasf-solarizedcssdark.css",
                "styles/thomasf-solarizedcsslight.css",
                "styles/witex.css"
            ],
            "matches": [
                "https://chat.openai.com/*"
            ]
        }
    ]
}